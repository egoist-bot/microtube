doctype html
html
    head
        meta(http-equiv='content-type' content='text/html; charset=UTF-8')
        meta(http-equiv='x-ua-compatible' content='ie=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title= title
        link(rel='stylesheet' href='/app.css')


    body
        include ../partials/sprite.pug
        
        div(class='app layout__container')
        
        div(class='app-loader app-loader--active')
          svg(class='rotating')
            use(xlink:href='#icon-loading')
    
        script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js' defer)
          
        script(src='//cdnjs.cloudflare.com/ajax/libs/redux/3.6.0/redux.min.js' defer)
        
        script(src='//cdnjs.cloudflare.com/ajax/libs/react/15.4.2/react.min.js' defer)
          
        script(src='//cdnjs.cloudflare.com/ajax/libs/react/15.4.2/react-dom.min.js' defer)
          
        script(src='//cdnjs.cloudflare.com/ajax/libs/react-redux/5.0.2/react-redux.min.js' defer)
          
        script(src='//apis.google.com/js/client.js' defer)

        script.
            window.INITIAL_STATE = !{initialState}

        script(src='/app.js')
          
        script.
          (function() {
            if('serviceWorker' in navigator) {
              navigator.serviceWorker.register('public/sw.js')
            }
          })()
