doctype html
html(lang='en')
    head
        meta(name='mobile-web-app-capable' content='yes')
        meta(name='apple-mobile-web-app-capable' content='yes')
        meta(name='application-name' content='MicroTube')
        meta(name='apple-mobile-web-app-title' content='MicroTube')
        meta(name='theme-color' content='#1C1B1B')
        meta(name='msapplication-navbutton-color' content='#1C1B1B')
        meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
        meta(name='msapplication-starturl' content='https://microtube.herokuapp.com/')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(http-equiv='content-type' content='text/html; charset=UTF-8')
        meta(http-equiv='x-ua-compatible' content='ie=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')

        link(rel='manifest' href='/manifest.json')
        link(rel='stylesheet' href='/app.css')
        link(rel='preconnect' href='//google.com')
        link(rel='dns-prefetch' href='//google.com')

        title= title

    body
        include ../partials/sprite.pug

        div(class='app layout__container')

        div(class='app-loader app-loader--active')
          svg(class='rotating')
            use(xlink:href='#icon-loading')

        script(src='//apis.google.com/js/client.js')

        script.
            window.INITIAL_STATE = !{initialState}

        script(src='/vendor.js')
          
        script(src='/app.js')

        script.
          (function() {
            if('serviceWorker' in navigator) {
              navigator.serviceWorker.register('/sw.js')
            }
          })()
